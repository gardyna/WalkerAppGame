<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ru.andr.walkinggame.Levelup">

    <TextView android:text="Please chose stat to level up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />
    <TextView android:text="you can level 3 times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LevelTimes"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strength"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:onClick="IncStat"
        android:id="@+id/StrengthButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed"
        android:onClick="IncStat"
        android:layout_below="@+id/StrengthButton"
        android:layout_alignParentStart="true"
        android:id="@+id/SpeedButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intelligence"
        android:onClick="IncStat"
        android:id="@+id/IntelligenceButton"
        android:layout_below="@+id/SpeedButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agility"
        android:onClick="IncStat"
        android:id="@+id/AgilityButton"
        android:layout_below="@+id/IntelligenceButton"
        android:layout_alignParentStart="true" />

    <!-- region statInfo -->
    <TextView
        android:id="@+id/strengthText"
        android:text="Strength: ??"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/StrengthButton"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/speedText"
        android:text="Speed: ??"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/SpeedButton"
        android:layout_alignEnd="@+id/strengthText"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/IntelligenceText"
        android:text="Intelligence: ??"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/IntelligenceButton"
        android:layout_alignEnd="@+id/strengthText"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/AgilityText"
        android:text="Speed: ??"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/AgilityButton"
        android:layout_alignEnd="@+id/strengthText"
        android:textSize="20dp"/>

    <!-- endregion -->


</RelativeLayout>
